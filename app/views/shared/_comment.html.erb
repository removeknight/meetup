    <div class="reply clearfix">
       <div class="avatar">
         <img src=<%= c.user.avatar %> alt="" class="image-circle">
       </div>
       <div class="body">
         <div class="heading">
            <h5 class="name"><%= link_to c.user.name, "#" %></h5>
            <span class="datetime">
              <%= time_ago_in_words c.created_at %> ago
            </span>
         </div>
         <%= c.content %>
       </div>
    </div>
