<div class="container clearfix">
  <div class="issue-list">
    <% @issues.each do |i| %>
    <article class="issue clearfix">
      <div class="avatar">
        <a href="/">
          <img src=<%= i.user.avatar %> alt="" class="image-circle">
</a>      </div>
      <div class="body">
        <h5 class="title">
          <%= link_to i.title ,issue_path(i) %>
        </h5>
        <a class="read-more" href="#">read</a>
        <span class="meta-data">
          <a href="/">i.user.name</a>
          <%= time_ago_in_words(i.created_at) %> ago
            
        </span>
      </div>
      <div class="issue-comment-count">
        <i class="fa fa-comments fa-2x icon-muted"></i>
        <%= link_to i.comments.count,  i%>
      </div>
    </article>
  <% end %>
  </div>
</div>
